{
    "compilerOptions": {
        "allowJs": true,
        "downlevelIteration": true,
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "outDir": "dist",
        "removeComments": false,
        "sourceMap": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es2020",
    },
    "include": [
        "src/*",
    ],
}
